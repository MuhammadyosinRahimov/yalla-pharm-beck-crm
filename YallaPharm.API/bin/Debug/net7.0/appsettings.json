{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5071;Database=yallaPharm;User Id=postgres;Password=root;"
  },
  "AuthOptions": {
    "Issuer": "YallaBack",
    "Audience": "YallaFront",
    "Key": "my_megasuperultramaxipixelcombo_key",
    "TokenLifetimeDays": 30
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/yalla-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
